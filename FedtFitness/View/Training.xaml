<Page
    x:Class="FedtFitness.View.Training"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FedtFitness.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:FedtFitness.ViewModel"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"

    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Page.DataContext>
        <viewModel:TrainingViewModel/>
    </Page.DataContext>


    <Page.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Margin" Value="5,5,5,5"/>
        </Style>
        <Style x:Key="StackPanelStyle" TargetType="StackPanel">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Margin" Value="5,5,5,5"/>
        </Style>
    </Page.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="0.2*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>


        <!--Back and Next Button-->

        <StackPanel Style="{StaticResource StackPanelStyle}"
                    Grid.Column="3" Grid.Row="3" Orientation="Horizontal">
            <Button Style="{StaticResource ButtonStyle}" 
                    Content="Back">
            </Button>
            <Button Style="{StaticResource ButtonStyle}" 
                    Content="Next">
            </Button>
        </StackPanel>


        <!--Training List of Exercises ListVIew-->

        <!--I am currently using the AllExercises Collection from ExerciseCatalogSingleton
        until I manage to use the F1 Collection from FiltersViewModel-->


        <StackPanel Style="{StaticResource StackPanelStyle}"
                        Grid.Column="3" Grid.Row="2" 
                        Orientation="Vertical"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch">
            <TextBlock HorizontalAlignment="Center" 
                       FontSize="20" 
                       FontWeight="Bold">
                <Run Text="Number of Exercises: "/>
                <Run Text="{Binding AllExcercises.Count}"/>
            </TextBlock>
            <ListView x:Name="TrainingListView"
                      ItemsSource="{Binding AllExcercises, Mode=OneWay}"
                      SelectedItem="{Binding SelectedExercise, Mode=TwoWay}"
                      Height="420">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            
                            <TextBlock x:Name="TrainingTextBlock"
                                       VerticalAlignment="Center"
                                       FontSize="18"
                                       Text="{Binding ExName}"/>
                            <!--<Button Name="MyButton" Background="Transparent">
                            </Button>-->
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>


        <!--Exercise Description-->

        <StackPanel Style="{StaticResource StackPanelStyle}" 
                    Grid.Column="2" Grid.Row="2" 
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Orientation="Vertical">
                    
            <TextBlock   Text="Exercise Description" 
                         HorizontalAlignment="Center" 
                         FontSize="24"/>
            <TextBlock Style="{StaticResource TextBlockStyle}"  
                Text="{Binding SelectedExercise.Description}"
                TextWrapping="Wrap"/>

            <!--Exercise Muscled_ID-->

            <TextBlock Style="{StaticResource TextBlockStyle}"  
                       TextWrapping="Wrap">
                       <Run Text="ID of Muscles used:"/>
                       <Run Text="{Binding SelectedExercise.Muscles_ID}"/>
            </TextBlock>

            <!--Exercise Equipment_ID-->

            <TextBlock Style="{StaticResource TextBlockStyle}"  
                       TextWrapping="Wrap">
                <Run Text="ID of Equipment used:"/>
                <Run Text="{Binding SelectedExercise.Equipment_ID}"/>
            </TextBlock>

        </StackPanel>
        
        <!--Progress Bar-->

        <StackPanel Style="{StaticResource StackPanelStyle}" 
                    Grid.Column="2" Grid.Row="1" 
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch">
            <TextBlock   HorizontalAlignment="Center" 
                         FontSize="24">
                <Run Text="{Binding ProgressPercentage}"/>
                <Run Text="% Completed"/>
            </TextBlock>
            <ProgressBar Width="400" Value="{Binding ProgressPercentage, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="10,10,10,10"/>
        </StackPanel>


    </Grid>
</Page>
