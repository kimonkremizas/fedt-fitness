<Page
    x:Class="FedtFitness.View.WorkoutEquipment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FedtFitness.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:FedtFitness.ViewModel"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Page.DataContext>
        <viewModel:FiltersViewModel/>
    </Page.DataContext>


    <Grid>

        
        <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" Grid.Column="1">
            <TextBlock Text="Customize your workout" FontSize="30" Height="50"  HorizontalAlignment="Center" Margin="0,100,0,0"/>
<StackPanel Orientation="Horizontal">
            <ComboBox 
                Name="EquipmentCombobox"
                      HorizontalAlignment="Center"
                      PlaceholderText="Select equipment"
                      ItemsSource="{Binding AllEquipments, Mode = TwoWay  }" 
                      DisplayMemberPath="{Binding eqName}" 
                      SelectedValue="ID"
                      SelectedItem="{Binding SelectedeqId, Mode=TwoWay}"
                      Width="200"
                      Margin="20,20,20,20"
                      />

            <ComboBox Name="MuscleGroupCombobox"
                      HorizontalAlignment="Center"
                      PlaceholderText="Select muscle group"
                      ItemsSource="{Binding AllMuscleGroups, Mode=TwoWay }" 
                      DisplayMemberPath="{Binding mgName}" 
                      SelectedValuePath="ID"
                      SelectedItem="{Binding SelectedMuscleGroup, Mode=TwoWay}"
                      Width="200"
                      Margin="20,20,20,20"
                      />


</StackPanel>

            <Button Content="Find Exercises" 
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Click="Button_Click" />

            </StackPanel>
    </Grid>
</Page>
