<Page
    x:Class="FedtFitness.View.WorkoutEquipment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FedtFitness.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:FedtFitness.ViewModel"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Page.DataContext>
        <viewModel:FiltersViewModel/>
    </Page.DataContext>


    <Grid>

        
        <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical" Grid.Column="1">
            <TextBlock Text="Customize your workout" FontSize="30" Height="50"  HorizontalAlignment="Center" Margin="0,100,0,0"/>
<StackPanel Orientation="Horizontal">
            <ComboBox HorizontalAlignment="Center"
                      PlaceholderText="Select equipment"
                      ItemsSource="{Binding AllEquipments }" 
                      DisplayMemberPath="{Binding eqName}" 
                     
                      Width="200"
                      Margin="20,20,20,20"
                      />

                <ComboBox HorizontalAlignment="Center"
                      PlaceholderText="Select muscle group"
                      ItemsSource="{Binding AllMuscleGroups }" 
                      DisplayMemberPath="{Binding mgName}" 
                     
                      Width="200"
                      Margin="20,20,20,20"
            />

</StackPanel>

        </StackPanel>
    </Grid>
</Page>
